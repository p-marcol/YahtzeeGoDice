<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flow_horizontalGap="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playerLabel"
                    android:text="@string/player_label"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playerName"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/diceGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="true"
                android:padding="8dp"
                android:useDefaultMargins="true">

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/ones"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/twos"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/threes"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/fours"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/fives"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/sixes"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/three_of_a_kind"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/four_of_a_kind"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/full_House"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/small_Straight"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/large_Straight"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:title="@string/yahtzee"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1" />

                <com.example.godicetest.views.DiceSet
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/chance"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_columnSpan="2" />

            </GridLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diceViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:flow_horizontalGap="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
